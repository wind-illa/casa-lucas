<% content_for :title, "Edita tus datos personales | Baratísimo Bazar" %>

<div class="profile-edit">
  <div class="container-edit">
    <div class="profile-header">
      <h1 class="profile-title">¿Cómo querés que te llamemos?</h1>
      <p class="profile-description">Verán el nombre que elijas todas las personas que interactúen con vos en el Baratísimo.</p>
      <p class="profile-instructions">Usá el nombre tal como figura en tu DNI para evitar confusiones en el envío.</p>
    </div>

    <div class="profile-form">
      <%= form_with model: current_user, url: account_profile_path(current_user), method: :patch, local: true, class: 'edit-name-form' do |form| %>
        <div class="form-group">
          <%= form.label :first_name, 'Nombre', class: 'form-label' %>
          <%= form.text_field :first_name, value: current_user.first_name, class: 'form-control', required: true, placeholder: 'Escribí tu nombre' %>
        </div>

        <div class="form-group">
          <%= form.label :last_name, 'Apellido', class: 'form-label' %>
          <%= form.text_field :last_name, value: current_user.last_name, class: 'form-control', required: true, placeholder: 'Escribí tu apellido' %>
        </div>

        <div class="form-actions">
          <%= form.submit 'Guardar Cambios', class: 'btn btn-primary' %>
          <%= link_to 'Volver', information_account_profiles_path(current_user), class: 'btn btn-secondary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>

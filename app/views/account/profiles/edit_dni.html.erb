<% content_for :title, "Edita tus datos personales | Baratísimo Bazar" %>

<div class="profile-edit-dni">
  <div class="container-edit">
    <div class="profile-header">
      <h1 class="profile-title">Ingresa un nuevo correo</h1>
    </div>

    <div class="profile-form">
      <%= form_with model: @user, url: account_profile_path(@user), method: :patch, local: true, class: 'edit-form' do |form| %>

        <div class="form-group form-group-type">
          <%= form.label :document_type, 'Tipo de Documento', class: 'form-label' %>
          <%= form.select :document_type, User.document_types.keys.map { |type| [type.humanize, type] }, { prompt: 'Selecciona el tipo de documento' }, class: 'form-control custom-select' %>
        </div>

        <div class="form-group">
          <%= form.label :document_id, 'Número de Documento', class: 'form-label' %>
          <%= form.text_field :document_id, value: @user.document_id, class: 'form-control', required: true %>
        </div>

        <div class="form-actions">
          <%= form.submit 'Guardar Cambios', class: 'btn btn-primary' %>
          <%= link_to 'Volver', information_account_profiles_path(@user), class: 'btn btn-secondary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>

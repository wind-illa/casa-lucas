<div class="product-new-edit-content">
  <div class="product-content">

    <%= form_with model: @payment_method, url: admin_payment_method_path(@payment_method), method: :patch, local: true, html: { autocomplete: 'off' } do |form| %>

      <div class="form-group">
        <div class="form-label-wrapper">
          <%= form.text_field :name, class: 'form-input', placeholder: 'name' %>
          <%= form.label :name, 'name', class: 'form-label' %>
        </div>
        <% if @payment_method.errors[:name].any? %>
          <div class="error-message"><%= @payment_method.errors[:name].first %></div>
        <% end %>
      </div>

      <div class="form-group">
        <div class="form-label-wrapper">
          <%= form.text_field :code, class: 'form-input', placeholder: 'code' %>
          <%= form.label :code, 'code', class: 'form-label' %>
        </div>
        <% if @payment_method.errors[:code].any? %>
          <div class="error-message"><%= @payment_method.errors[:code].first %></div>
        <% end %>
      </div>

      <div class="form-group">
        <div class="form-label-wrapper">
          <%= form.text_field :description, class: 'form-input', placeholder: 'description' %>
          <%= form.label :description, 'description', class: 'form-label' %>
        </div>
        <% if @payment_method.errors[:description].any? %>
          <div class="error-message"><%= @payment_method.errors[:description].first %></div>
        <% end %>
      </div>

      <%= form.submit 'Actualizar Token', class: 'btn btn-primary' %>

      <div class="space">
        <%= link_to 'Volver', admin_payment_methods_path, class: 'btn btn-secondary' %>
      </div>

    <% end %>

  </div>
</div>

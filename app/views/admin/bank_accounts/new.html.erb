<div class="product-new-edit-content">
  <div class="product-content">

  <%= form_with model: @bank_account, url: admin_bank_accounts_path, method: :post, local: true, html: { autocomplete: 'off' } do |form| %>


    <div class="form-group">
      <div class="form-label-wrapper">
        <%= form.text_field :alias, class: 'form-input', placeholder: 'alias' %>
        <%= form.label :alias, 'alias', class: 'form-label' %>
      </div>
      <% if @bank_account.errors[:alias].any? %>
        <div class="error-message"><%= @bank_account.errors[:alias].first %></div>
      <% end %>
    </div>

    <div class="form-group">
      <div class="form-label-wrapper">
        <%= form.text_field :numero, class: 'form-input', placeholder: 'numero' %>
        <%= form.label :numero, 'numero', class: 'form-label' %>
      </div>
      <% if  @bank_account.errors[:numero].any? %>
        <div class="error-message"><%=  @bank_account.errors[:numero].first %></div>
      <% end %>
    </div>

    <div class="form-group">
      <div class="form-label-wrapper">
        <%= form.select :tipo, options_for_select(BankAccount.tipos.keys.map { |tipo| [tipo.to_s.humanize, tipo] }, prompt: 'Selecciona un tipo'), {}, class: 'form-input' %>
        <%= form.label :tipo, 'tipo', class: 'form-label' %>
      </div>
      <% if @bank_account.errors[:tipo].any? %>
        <div class="error-message"><%= @bank_account.errors[:tipo].first %></div>
      <% end %>
    </div>

    <div class="form-group">
      <div class="form-label-wrapper">
        <%= form.select :estado, options_for_select(BankAccount.estados.keys.map { |estado| [estado.to_s.humanize, estado] }, prompt: 'Selecciona un estado'), {}, class: 'form-input' %>
        <%= form.label :estado, 'estado', class: 'form-label' %>
      </div>
      <% if @bank_account.errors[:estado].any? %>
        <div class="error-message"><%= @bank_account.errors[:estado].first %></div>
      <% end %>
    </div>


    <%= form.submit 'Crear Token', class: 'btn btn-primary' %>

    <div class="space">
      <%= link_to 'Volver', admin_bank_accounts_path, class: 'btn btn-secondary' %>
    </div>

  <% end %>

  </div>
</div>

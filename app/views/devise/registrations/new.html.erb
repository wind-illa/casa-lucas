<div class="signup-page">
  <div class="signup-container">
    <div class="signup-header">
      <h2>Crea tu cuenta</h2>
    </div>

    <%= render "devise/shared/error_messages", resource: resource %>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "signup-form-container" }) do |f| %>
      <div class="field form-group">
        <%= f.label :Nombre, class: "form-label" %>
        <%= f.text_field :first_name, autofocus: true, class: "form-input" %>
      </div>

      <div class="field form-group">
        <%= f.label :Apellidos, class: "form-label" %>
        <%= f.text_field :last_name, autofocus: true, class: "form-input" %>
      </div>

      <div class="field form-group">
        <%= f.label :Teléfono, class: "form-label" %>
        <%= f.text_field :phone, autofocus: true, class: "form-input" %>
      </div>

      <div class="field form-group">
        <%= f.label :email, class: "form-label" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-input" %>
      </div>

      <div class="field form-group">
        <div class="pass-container"><%= f.label :contraseña, class: "form-label" %>
          <% if @minimum_password_length %>
            <em>(Como mínimo, <%= @minimum_password_length %> caracteres)</em>
          <% end %>
        </div>
        <%= f.password_field :password, autocomplete: "new-password", class: "form-input" %>
      </div>

      <div class="field form-group">
        <%= f.label :Vuelve_a_escribir_la_contraseña, class: "form-label" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-input" %>
      </div>

      <div class="actions form-actions">
        <%= f.submit "Registrate", class: "button-primary" %>
      </div>
    <% end %>

    <div class="apartado">
      <div></div>
      <p>
      ¿Ya tienes una cuenta?</p>
      <div></div>
    </div>

    <div class="signup-links">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>


<% content_for :title, "Edita tus datos personales" %>

<div class="account-business-adresses-new">
  <div class="container-edit-profile">

    <div class="products-navigation">
      <ol>
        <li>
          <%= link_to business_account_profile_path do %>
            <span>Mi perfil</span>
            <svg class="icon">
              <use xlink:href="<%= asset_path('icons/business.svg#flecha-separacion-siguiente') %>"></use>
            </svg>
          <% end %>
        </li>

        <li>
          <%= link_to business_account_transporte_preferidos_path do %>
            <span>Mis servicios de envíos</span>
            <svg class="icon">
              <use xlink:href="<%= asset_path('icons/business.svg#flecha-separacion-siguiente') %>"></use>
            </svg>
          <% end %>
        </li>

        <li>
          <span>Nuevo transportista</span>
        </li>

      </ol>
    </div>

    <div class="profile-header">
      <h1 class="profile-title">¿Con qué transporte trabajás habitualmente?</h1>
      <p class="profile-description">Registrá un transportista para organizar mejor tus envíos.</p>
      <p class="profile-instructions">Podés asignar uno como predeterminado según tus preferencias.</p>
    </div>

    <div class="profile-form">
      <%= form_with model: [:business, :account, @transport], local: true do |form| %>
        <div class="form-group">
          <div class="form-label-wrapper">
            <%= form.text_field :nombre, class: 'form-input', placeholder: 'Nombre del transporte' %>
            <%= form.label :nombre, 'Nombre del transportista. Ej: El Mendocino', class: 'form-label' %>
          </div>
          <% if @transport.errors[:nombre].any? %>
            <div class="error-message"><%= @transport.errors[:nombre].first %></div>
          <% end %>
        </div>

        <div class="field">
          <%= form.label :predeterminado, "¿Establecer como transporte predeterminado?" %>
          <%= form.check_box :predeterminado %>
        </div>

        <div class="form-group text-area">
          <div class="form-label-wrapper">
            <%= form.text_area :observaciones, class: 'form-input', placeholder: 'Observaciones sobre el transportista (opcional)' %>
            <%= form.label :observaciones, 'Observaciones sobre el transportista (opcional)', class: 'form-label' %>
          </div>
        </div>

        <div class="space">
          <%= link_to 'Volver', business_account_transporte_preferidos_path, class: 'btn btn-secondary' %>
          <%= form.submit 'Guardar Transporte', class: 'btn btn-primary' %>
        </div>
      <% end %>
    </div>

  </div>
</div>

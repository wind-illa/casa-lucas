<ul>
  <% @list.list_items.includes(:product).each do |item| %>
    <li>
      <%= link_to item.product.name, business_product_path(item.product) %>
      <%= button_to 'Quitar', business_account_lista_producto_path(@list, item), method: :delete, data: { confirm: 'Â¿Eliminar producto de la lista?' } %>
    </li>
  <% end %>
</ul>
